@using JahanJooy.Common.Util.Web.Captcha
@using JahanJooy.Common.Util.Web.Extensions
@using JahanJooy.RealEstate.Util.Resources
@model JahanJooy.RealEstate.Web.Models.MyProfile.MyProfileAddPhoneNumberModel


<div class="modal-content" id="addContactMethodRoot">
    <div class="form-horizontal">
        @using (Ajax.BeginForm("AddPhoneNumberPostback", new {}, new AjaxOptions {InsertionMode = InsertionMode.Replace, UpdateTargetId = "addContactMethodRoot"}, new {id = "frmAddContactMethod"}))
        {
            <div class="modal-header">
                <h4 class="modal-title">شماره تلفن جدید</h4>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary()
                <div class="form-group">
                    <div class="col-xs-6 col-md-6">@Html.LabelFor(m => m.PhoneNumber)</div>
                    <div class="col-xs-6 col-md-6">@Html.TextBoxFor(m => m.PhoneNumber, new {style = "direction:ltr;", autofocus = "autofocus"})</div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6 col-md-6">@Html.LabelFor(m => m.Visibility)</div>
                    <div class="col-xs-6 col-md-6">@Html.DropDownListFor(m => m.Visibility, Model.Visibility.EnumSelectList(DomainEnumResources.ResourceManager), new {@class = "form-control"})</div>
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.Visibility)
                </div>

            </div>
            <div class="modal-footer">
                <button name="btnOK" value="btnOK" type="submit" class="btn btn-primary">اضافه کن</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">بی خیال</button>
            </div>

            <div>
                @Html.ScriptCaptchaToken()
                @Html.ScriptCaptchaScript()
                @Html.CaptchaErrorMessage()
            </div>
        }
    </div>
    <script type="text/javascript">
        $.validator.unobtrusive.parse("#frmAddContactMethod");
    </script>
</div>
