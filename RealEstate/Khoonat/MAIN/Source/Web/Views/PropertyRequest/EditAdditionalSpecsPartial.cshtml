@using JahanJooy.Common.Util.Web.Extensions
@using JahanJooy.RealEstate.Util.Resources
@model JahanJooy.RealEstate.Web.Models.PropertyRequest.PropertyRequestEditModel

@*
    ********************************************************************************
    **** Additional specs for Building and Unit properties
*@


<div class="none displayPerType showForHouse showForVilla showForApartment showForPenthouse">
    <div class="panel panel-primary">
        <div class="panel-heading" role="tab">
            <h4 class="panel-title">
                <a class="collapsed" data-toggle="collapse" href="#additionalSpecs" aria-expanded="false" aria-controls="additionalSpecs">
                    خصوصیات بیشتر
                    (کلیک کنید)
                    <span class="caret"></span>
                </a>
            </h4>
        </div>
        <div id="additionalSpecs" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12 col-md-10">
                        <div class="form-group">
                            <div class="col-xs-12 col-md-4">
                                @Html.LabelFor(m => m.LivingRoomFloor):
                            </div>
                            <div class="col-xs-12 col-md-4">
                                @Html.DropDownListFor(m => m.LivingRoomFloor, Model.LivingRoomFloor.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.SelectOne, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LivingRoomFloor)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-10">
                        <div class="form-group">
                            <div class="col-xs-12 col-md-4">
                                @Html.LabelFor(m => m.FaceType):
                            </div>
                            <div class="col-xs-12 col-md-4">
                                @Html.DropDownListFor(m => m.FaceType, Model.FaceType.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.SelectOne, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FaceType)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-10">
                        <div class="form-group">
                            <div class="col-xs-12 col-md-4">
                                @Html.LabelFor(m => m.KitchenCabinetBodyType):
                            </div>
                            <div class="col-xs-12 col-md-4">
                                @Html.DropDownListFor(m => m.KitchenCabinetBodyType, Model.KitchenCabinetBodyType.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.SelectOne, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.KitchenCabinetBodyType)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-10">
                        <div class="form-group">
                            <div class="col-xs-12 col-md-4">
                                @Html.LabelFor(m => m.KitchenCabinetTopType):
                            </div>
                            <div class="col-xs-12 col-md-4">
                                @Html.DropDownListFor(m => m.KitchenCabinetTopType, Model.KitchenCabinetTopType.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.SelectOne, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.KitchenCabinetTopType)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-10">
                        <div class="form-group">
                            <div class="col-xs-12 col-md-4">
                                @Html.LabelFor(m => m.MainDaylightDirection):
                            </div>
                            <div class="col-xs-12 col-md-4">
                                @Html.DropDownListFor(m => m.MainDaylightDirection, Model.MainDaylightDirection.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.SelectOne, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.MainDaylightDirection)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-xs-5">
                                @Html.LabelFor(m => m.IsDuplex)@GeneralResources.QuestionMark
                            </div>
                            @foreach (RadioButtonListItem item in Html.RadioButtonListFor(m => m.IsDuplex, SelectHtmlExtensions.BuildBooleanList()))
                            {
                                <div class="col-xs-2">
                                    @item.Input@item.Label
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-xs-5">
