                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-xs-5">
                                @Html.LabelFor(m => m.HasBeenReconstructed)@GeneralResources.QuestionMark
                            </div>
                            @foreach (RadioButtonListItem item in Html.RadioButtonListFor(m => m.HasBeenReconstructed, SelectHtmlExtensions.BuildBooleanList()))
                            {
                                <div class="col-xs-2">@item.Input @item.Label</div>
                            }
                        </div>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xs-12 col-md-5">
                        <div class="form-group">
                            <div class="col-xs-6">
                                @Html.LabelFor(m => m.NumberOfMasterBedrooms):
                            </div>
                            <div class="col-xs-3">
                                @Html.TextBoxFor(m => m.NumberOfMasterBedrooms, new { maxlength = 2, style = "direction:ltr;text-align:center;" })
                                @Html.ValidationMessageFor(m => m.NumberOfMasterBedrooms)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
