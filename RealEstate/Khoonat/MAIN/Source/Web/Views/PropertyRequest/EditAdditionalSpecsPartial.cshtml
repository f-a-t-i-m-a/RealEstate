                            @foreach (RadioButtonListItem item in Html.RadioButtonListFor(m => m.HasForeignLavatory, SelectHtmlExtensions.BuildBooleanList()))
                            {
                                <div class="col-xs-2">
                                    @item.Input@item.Label
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-xs-5">
                                @Html.LabelFor(m => m.HasGatheringHall)@GeneralResources.QuestionMark
                            </div>
                            @foreach (RadioButtonListItem item in Html.RadioButtonListFor(m => m.HasGatheringHall, SelectHtmlExtensions.BuildBooleanList()))
                            {
                                <div class="col-xs-2">@item.Input@item.Label</div>
                            }
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-xs-5">
                                @Html.LabelFor(m => m.HasSwimmingPool)@GeneralResources.QuestionMark
                            </div>
                            @foreach (RadioButtonListItem item in Html.RadioButtonListFor(m => m.HasSwimmingPool, SelectHtmlExtensions.BuildBooleanList()))
                            {
                                <div class="col-xs-2">
                                    @item.Input
                                    @item.Label
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-xs-5">
                                @Html.LabelFor(m => m.HasAutomaticParkingDoor)@GeneralResources.QuestionMark
