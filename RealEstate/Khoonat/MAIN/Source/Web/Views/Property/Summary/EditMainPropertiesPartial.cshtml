@using JahanJooy.Common.Util.Web.Extensions
@using JahanJooy.RealEstate.Util.Resources
@model JahanJooy.RealEstate.Web.Models.Property.PropertySummaryModel

@*
    ********************************************************************************
    **** Main properties
*@

<div class="row">
	<div class="col-xs-12 col-md-6">
		<div class="form-group">
			<div class="col-xs-3">
				<span class="icon-required"></span>
				@Html.LabelFor(m => m.PropertyType):
			</div>
			<div class="col-xs-9">
				@Html.DropDownListFor(m => m.PropertyType, Model.PropertyType.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.NotSelected, new { autofocus = "autofocus", @class = "form-control" })
				@Html.ValidationMessageFor(m => m.PropertyType)
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-md-6">
		<div class="form-group">
		    <div class="col-xs-3">
                <span class="icon-required"></span>
		        @Html.LabelFor(m => m.IntentionOfOwner):
		    </div>
			<div class="col-xs-9">
				@Html.DropDownListFor(m => m.IntentionOfOwner, Model.IntentionOfOwner.EnumSelectList(DomainEnumResources.ResourceManager), GeneralResources.NotSelected, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.IntentionOfOwner)
			</div>
		</div>
	</div>
</div>

@this.ScriptBlock(@<script type="text/javascript">

                       $("#IntentionOfOwner").change(function() {
                           $(".displayPerIntention.show" + this.value).show(400);
                           $(".displayPerIntention:not(.show" + this.value + ")").hide(400);
                       });

                       $("#PropertyType").change(function() {
                           $(".displayPerType.showFor" + this.value).show(400);
                           $(".displayPerType:not(.showFor" + this.value + ")").hide(400);
                       });

                       $("#IntentionOfOwner").change();
                       $("#PropertyType").change();

                   </script>)