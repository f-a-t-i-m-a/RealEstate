@using JahanJooy.Common.Util.Web.Extensions
@model JahanJooy.RealEstate.Domain.Billing.PromotionalBonus

@Html.Partial("ViewBonusDetailsPopup", Model)


@using (Html.BeginForm("ReverseBonusConfirmed", "PromotionalBonusAdmin"))
{
    <div class="modal-content">
        <div class="modal-body">
            <div class="row">
                @Html.HiddenFor(m => m.ID)
                <div>
                    آیا مطمئنید که می خواهید جایزه اضافه شده را معکوس کنید؟
                    <br /><br />

                    <input type="checkbox" id="chkAllowReverse" name="chkAllowReverse" />
                    <label for="chkAllowReverse">بله؛ امکان معکوس کردن فعال شود.</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input id="btnReverse" name="btnReverse" class="btn btn-primary none btn-sm" type="submit" value="معکوس کن" />
            <button type="button" class="btn btn-default" data-dismiss="modal">بی خیال</button>
        </div>
    </div>
}

@(this.ScriptBlock(@<script type="text/javascript">
                        $("#chkAllowReverse").change(function() {
                            if (this.checked)
                                $("#btnReverse").show();
                            else
                                $("#btnReverse").hide();
                        });
                    </script>))