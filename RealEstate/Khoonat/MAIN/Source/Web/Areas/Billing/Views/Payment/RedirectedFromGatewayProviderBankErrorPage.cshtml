@using JahanJooy.RealEstate.Util.Resources
@using JahanJooy.RealEstate.Web.Areas
@model JahanJooy.RealEstate.Web.Areas.Billing.Models.Payment.RedirectedFromGatewayProviderBankModel


<div class="page-header">
    <h1>
        <a href="@Url.Action("Index", "BillingHome", AreaRouteValue.Billing)">سامانه مالی</a>:
        <a href="@Url.Action("IncreaseCredit", "BillingHome", AreaRouteValue.Billing)">افزایش اعتبار</a>:
        خطا در افزایش اعتبار
    </h1>
</div>
@using (Html.BeginForm("Index", "Home", AreaRouteValue.Main, FormMethod.Get))
{
    <div class="panel panel-primary">

        <div class="panel-heading">
            <h3 class="panel-title">خطا در افزایش اعتبار</h3>
        </div>
        <br/>
        <div class="panel-body">
            خطا!
        </div>
        <div class="panel-body">
            <p>
                @if (Model.InvoiceNumberNotFound)
                {
                    <div>این شماره فاکتور در سیستم وجود ندارد</div>
                }
                @if (Model.BillingStateError)
                {
                    <div>وضعیت تراکنش درست نیست</div>
                }
                @if (Model.BillingStateIsAppliedError)
                {
                    <div>تراکنشی با این شناسه در گذشته انجام شده است. اگر با کلید back یا refresh به این صفحه آمده اید می توانید این خطا را نادیده بگیرید.</div>
                }
                @if (Model.PaymentRequestTooOld)
                {
                    <div>از درخواست شما زمان زیادی گذشته است. لطفا دوباره درخواست بدهید.</div>
                }
                @if (Model.InvoiceNumberConflict)
                {
                    <div>شماره فاکتور همخوانی ندارد</div>
                }
                @if (Model.AmountConflict)
                {
                    <div>مبلغ پرداختی همخوانی ندارد</div>
                } 
                @if (Model.InvoiceDateError)
                {
                    <div>تاریخ فاکتور همخوانی ندارد</div>
                }
                @if (Model.MerchantCodeConflict)
                {
                    <div>کد فروشنده همخوانی ندارد</div>
                }
                @if (Model.TerminalCodeConflict)
                {
                    <div>کد ترمینال همخوانی ندارد</div>
                }
                @if (Model.CheckTransactionResultResposeError)
                {
                    <div>بانک تراکنش را تایید نکرد.</div>
                }
                @if (Model.VerifyPaymentResponseError)
                {
                    <div>بانک تراکنش را تایید نهایی نکرد.</div>
                }
            </p>
        </div>
        <div class="panel-body">
            <a href="/userfeedback/contactus">
                اگر مشکل پیش آمده سبب شده حساب شما شارژ نگردد، برای دریافت راهنمایی و رفع مشکل میتوانید با ما تماس بگیرید
            </a>
        </div>

        <div class="panel-footer">
            <button name="submit" value="btnSave" class="btn btn-primary btn-md" type="submit"> صفحه اصلی </button>
        </div>
    </div>
}