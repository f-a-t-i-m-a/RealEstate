@using System.Globalization
@using JahanJooy.RealEstate.Util.Presentation
@using JahanJooy.RealEstate.Util.Resources
@using JahanJooy.RealEstate.Web.Areas.Admin.Helpers.AdminAcvityLog
@using JahanJooy.RealEstate.Web.Areas.Admin.Resources.AdminActivityLog
@using JahanJooy.RealEstate.Web.Helpers
@model JahanJooy.RealEstate.Core.Services.Dto.Audit.ActivityLogDisplayInfo

@{
	var shortcutUrl = Url.ActivityLogTargetShortcutHref(Model.ParentEntity, Model.ParentEntityID);
}

@if (!Model.ParentEntity.HasValue)
{
	<text>@HtmlPresentationHelper.Disabled("---")</text>
}
else
{
	<div style='display: inline-block;'>
		@if (!string.IsNullOrEmpty(shortcutUrl))
		{
			<a href="@shortcutUrl" style="float: left; margin-right: 3px;">
				@IconsHelper.Xlink32(Url)
			</a>
		}
		@(ActivityLogEntityTypeResources.ResourceManager.GetString("TargetEntity_" + Model.ParentEntity.ToString()) ?? Model.ParentEntity.ToString())
		<br/><span style="font-size: 80%;">@(Model.ParentEntityID.HasValue ? "ID " + Model.ParentEntityID.Value.ToString(CultureInfo.InvariantCulture) : GeneralResources.Unknown)</span>
	</div>
}
