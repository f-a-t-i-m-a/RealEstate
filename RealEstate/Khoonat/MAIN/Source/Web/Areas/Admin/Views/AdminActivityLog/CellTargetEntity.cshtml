@using System.Globalization
@using JahanJooy.Common.Util.Web.Routing
@using JahanJooy.RealEstate.Util.Resources
@using JahanJooy.RealEstate.Web.Areas.Admin.Helpers.AdminAcvityLog
@using JahanJooy.RealEstate.Web.Areas.Admin.Resources.AdminActivityLog
@using JahanJooy.RealEstate.Web.Helpers
@model JahanJooy.RealEstate.Core.Services.Dto.Audit.ActivityLogDisplayInfo

@{
	var shortcutUrl = Url.ActivityLogTargetShortcutHref(Model.TargetEntity, Model.TargetEntityID);
}

<div style='display: inline-block;'>
	@if (!string.IsNullOrEmpty(shortcutUrl))
	{
		<a href="@shortcutUrl" style="float: left; margin-right: 3px;">
			@IconsHelper.Xlink32(Url)
		</a>
	}
	<a style="display: inline-block;" href="@Url.Action("List", Request.QueryString.ToRouteValues().Merge(new { ApplyTargetEntityIdFilter = true, TargetEntityFilter = Model.TargetEntity, TargetEntityIdFilter = Model.TargetEntityID}))">
		@(ActivityLogEntityTypeResources.ResourceManager.GetString("TargetEntity_" + Model.TargetEntity.ToString()) ?? Model.TargetEntity.ToString())
		<br/><span style="font-size: 80%;">@(Model.TargetEntityID.HasValue ? "ID " + Model.TargetEntityID.Value.ToString(CultureInfo.InvariantCulture) : GeneralResources.Unknown)</span>
	</a>
</div>

